<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imgSearchBaiHat"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/txtSearchTenBaiHat"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/lblTenBaiHat"
        android:layout_toRightOf="@id/imgSearchBaiHat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtSearchTenCaSi"
        android:textSize="18sp"
        android:textColor="#787878"
        android:layout_below="@id/txtSearchTenBaiHat"
        android:text="@string/lblTenCaSi"
        android:layout_toRightOf="@id/imgSearchBaiHat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imgViewSearchLuotThich"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>