<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/theme2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlayNhacActivity"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarplaynhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpaperplaynhac"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>

    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/share"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="-30dp"
        android:layout_gravity="left"/>
    <ImageButton
        android:id="@+id/btnDownload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/download"
        android:layout_marginRight="25dp"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="00:00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/textviewtimesong"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbarsong"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="00:00"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/textviewtotaltimesong"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imagebuttonsuffle"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageButton
                android:src="@drawable/prebutton"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imagebuttonpre"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:src="@drawable/playbutton"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imagebuttonplay"
                android:layout_marginRight="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageButton
                android:src="@drawable/nextbutton"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imagebuttonnext"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imagebuttonrepeat"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>